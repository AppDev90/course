
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "بازیابی کلمه عبور";
}

<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">@Course.Core.Common.ConstValues.SiteName</a></li>
        <li class="breadcrumb-item active" aria-current="page">بازیابی کلمه عبور</li>
    </ul>
</nav>

<main class="client-page">
    <div class="container-content">

        @if (ViewBag.IsSuccess != null && ViewBag.IsSuccess)
        {
            <div class="alert alert-success">
                <p class="help-block">
                    ایمیل بازیابی کلمه عبور با موفقیت ارسال شد.
                </p>
            </div>
        }

        <header><h2> بازیابی کلمه عبور</h2></header>

        <div class="form-layer">

            <form action="ForgotPassword" method="post">

                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input asp-for="Email" type="text" class="form-control" placeholder="ایمیل" aria-describedby="email-address">
                </div>
                <span asp-validation-for="Email"></span>

                <div class="input-group">

                </div>

                <button class="btn btn-success" onclick="maintainscrollposition()">تایید و ارسال</button>

            </form>
        </div>

    </div>
</main>

