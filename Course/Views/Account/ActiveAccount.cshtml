
@{
    ViewData["Title"] = "فعال سازی حساب کاربری";
}

<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">@Course.Core.Common.ConstValues.SiteName</a></li>
        <li class="breadcrumb-item active" aria-current="page">فعال سازی حساب کاربری</li>
    </ul>
</nav>

@if (ViewBag.IsSuccess)
{
    <div class="alert alert-success">
        <p>
            حساب کاربری شما با موفقیت فعال شد.
        </p>
        <p>
            <a asp-action="Login" asp-controller="Account">ورود به سایت</a>
        </p>
    </div>
}
else
{
    <div class="alert alert-danger">
        <p>
            کد فعال سازی معتبر نیست.
        </p>
    </div>
}

