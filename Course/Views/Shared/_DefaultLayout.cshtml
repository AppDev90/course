<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
    <meta charset="UTF-8">
    <title> @Course.Core.Common.ConstValues.SiteName | @ViewData["Title"] </title>

    <partial name="_MetaTags" />

    <partial name="_Styles" />

    <script src="/js/jquery.min.js"></script>

</head>
<body>
    <script src="/js/modernizr-custom.js"></script>
    <script src="/js/customScriptStart.js"></script>

    <div class="landing-layer">
        <div class="container">

            <nav>
                <div class="row">
                    <div class="col-sm-6 col-xs-12">
                        <ul>
                            <li>
                                <a href=""> همکاری در فروش </a>
                                <a href=""> درباره ما </a>
                                <a href=""> تماس با ما </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-sm-6 col-xs-12">
                        <div class="clientarea">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="loggein">
                                    <i class="zmdi zmdi-account"></i><a href="/UserPanel"> @User.Identity.Name، خوش آمدی. </a>
                                    /
                                    <a href="@Course.Core.Common.ConstValues.LogoutPath"> خروج </a>
                                </div>
                            }
                            else
                            {
                                <div class="signin ">
                                    <i class="zmdi zmdi-account"></i>
                                    <a href="@Course.Core.Common.ConstValues.LoginPath"> ورود </a> /
                                    <a asp-action="Register" asp-controller="Account">عضویت</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </nav>

            @RenderSection("SearchBox", false)

        </div>
    </div>

    <!-- main manu -->

    <partial name="_MainMenue" />

    <!-- /main manu -->
    <!-- content -->

    @RenderBody()

    <!-- /content -->
    <!-- footer -->

    <partial name="_Footer" />

    <!-- /footer -->

    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/script.js"></script>
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.js"></script>
    <script src="/js/customScript.js"></script>
</body>
</html>
