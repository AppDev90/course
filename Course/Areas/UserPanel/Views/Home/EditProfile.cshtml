
@model Course.Core.DTDs.EditProfileViewModel
@{
    ViewData["Title"] = "ویرایش حساب کاربری";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">@Core.Common.ConstValues.SiteName</a></li>
            <li class="breadcrumb-item active" aria-current="page"> ویرایش پروفایل </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> ویرایش حساب کاربری </h1></header>
                        <div class="inner form-layer">
                            <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
                                @if (ViewBag.IsSuccess == true)
                                {
                                    <div class="alert alert-success">
                                        اطلاعات کاربری شما با موفقیت ویرایش شد.
                                    </div>

                                    @if (ViewBag.UsernameChanged == true)
                                    {
                                        <div class="alert alert-success">
                                            لطفاً دوباره وارد شوید.
                                        </div>
                                        <script>
                                            redirectTo("/Account/Login", 3000);
                                        </script>

                                    }
                                }


                                <div asp-validation-summary="All" class="text-danger" style="margin-bottom:20px">
                                </div>
                                <input type="hidden" asp-for="AvatarName" />
                                <div class="row">
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username"><i class="zmdi zmdi-account"></i></span>
                                            <input type="text" class="form-control" asp-for="UserName" placeholder="نام کاربری" aria-describedby="username">
                                        </div>
                                    </div>

                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <p class="help-block">
                                            آواتار
                                        </p>
                                        <input type="file" asp-for="UserAvatar" />
                                        <img class="thumbnail" src="@Core.Common.ConstValues.AvatarFolder/@Model.AvatarName" style="max-width: 150px" />
                                    </div>
                                    <p>

                                    </p>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success"> ویرایش اطلاعات </button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>



